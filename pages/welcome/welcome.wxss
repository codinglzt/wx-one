/* pages/welcome/welcome.wxss */
.container {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}
.bg_img {
  height: 1200rpx;
  width: 750rpx;
}

.footer {
  display: flex;
  flex-direction: column;
  color: #fff;
  padding: 40rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.8));
}
.day {
  font-size: 48px;
  line-height: 48px;
  font-family: serif;
}
.year_month {
  font-size: 19px;
  line-height: 19px;
}
.footer_container {
  font-size: 16px;
  line-height: 26px;
  max-height: 78px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}